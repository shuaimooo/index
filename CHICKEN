<body class="bg-gray-900 p-3">
    <div class="w-80 bg-gray-800 rounded-lg shadow-2xl border border-gray-700">
        <!-- 標題欄 -->
        <div class="bg-gradient-to-r from-green-600 to-blue-600 rounded-t-lg px-4 py-2">
            <h1 class="text-white text-sm font-semibold text-center">重量價格計算器</h1>
        </div>
        
        <div class="p-4 space-y-4">
            <!-- 重量換算 -->
            <div class="bg-gray-700 rounded-lg p-3">
                <div class="flex justify-between items-center mb-2">
                    <h2 class="text-white text-xs font-medium">⚖️ 重量換算</h2>
                    <button onclick="clearConverter()" class="bg-red-600 hover:bg-red-500 text-white text-xs px-2 py-1 rounded">清除</button>
                </div>
                <div class="space-y-2">
                    <!-- 輸入區 -->
                    <div class="grid grid-cols-2 gap-2">
                        <input type="number" id="convertInput" placeholder="輸入重量" 
                               class="px-2 py-1 text-sm bg-gray-600 text-white rounded border border-gray-500 focus:border-purple-500 focus:outline-none">
                        <select id="convertFromUnit" class="px-2 py-1 text-sm bg-gray-600 text-white rounded border border-gray-500 focus:border-purple-500 focus:outline-none">
                            <option value="兩">兩</option>
                            <option value="斤">斤</option>
                            <option value="克">克</option>
                            <option value="公斤">公斤</option>
                        </select>
                    </div>
                    
                    <!-- 換算結果 -->
                    <div class="bg-gray-600 rounded p-2 space-y-1">
                        <div class="flex justify-between text-xs">
                            <span class="text-gray-300">兩：</span>
                            <span id="resultTael" class="text-purple-300">-</span>
                        </div>
                        <div class="flex justify-between text-xs">
                            <span class="text-gray-300">斤：</span>
                            <span id="resultJin" class="text-purple-300">-</span>
                        </div>
                        <div class="flex justify-between text-xs">
                            <span class="text-gray-300">克：</span>
                            <span id="resultGram" class="text-purple-300">-</span>
                        </div>
                        <div class="flex justify-between text-xs">
                            <span class="text-gray-300">公斤：</span>
                            <span id="resultKg" class="text-purple-300">-</span>
                        </div>
                    </div>
                    
                    <!-- 快速換算按鈕 -->
                    <div class="grid grid-cols-4 gap-1">
                        <button onclick="quickConvert(1, '兩')" class="bg-purple-600 hover:bg-purple-500 text-white text-xs py-1 rounded">1兩</button>
                        <button onclick="quickConvert(1, '斤')" class="bg-purple-600 hover:bg-purple-500 text-white text-xs py-1 rounded">1斤</button>
                        <button onclick="quickConvert(100, '克')" class="bg-purple-600 hover:bg-purple-500 text-white text-xs py-1 rounded">100克</button>
                        <button onclick="quickConvert(1, '公斤')" class="bg-purple-600 hover:bg-purple-500 text-white text-xs py-1 rounded">1公斤</button>
                    </div>
                </div>
            </div>

            <!-- 價格設定區 -->
            <div class="bg-gray-700 rounded-lg p-3">
                <h2 class="text-white text-xs font-medium mb-2">📋 設定基準價格</h2>
                <div class="grid grid-cols-3 gap-2 mb-2">
                    <input type="number" id="baseWeight" placeholder="重量" 
                           class="px-2 py-1 text-sm bg-gray-600 text-white rounded border border-gray-500 focus:border-green-500 focus:outline-none">
                    <select id="baseUnit" class="px-2 py-1 text-sm bg-gray-600 text-white rounded border border-gray-500 focus:border-green-500 focus:outline-none">
                        <option value="兩">兩</option>
                        <option value="斤">斤</option>
                        <option value="克">克</option>
                        <option value="公斤">公斤</option>
                    </select>
                    <input type="number" id="basePrice" placeholder="價格" 
                           class="px-2 py-1 text-sm bg-gray-600 text-white rounded border border-gray-500 focus:border-green-500 focus:outline-none">
                </div>
                <div id="basePriceDisplay" class="text-green-400 text-xs text-center py-1 bg-gray-600 rounded">
                    請設定基準價格
                </div>
            </div>

            <!-- 計算區 -->
            <div class="bg-gray-700 rounded-lg p-3">
                <h2 class="text-white text-xs font-medium mb-2">🧮 計算價格</h2>
                <div class="grid grid-cols-2 gap-2 mb-2">
                    <input type="number" id="calcWeight" placeholder="重量" 
                           class="px-2 py-1 text-sm bg-gray-600 text-white rounded border border-gray-500 focus:border-blue-500 focus:outline-none">
                    <select id="calcUnit" class="px-2 py-1 text-sm bg-gray-600 text-white rounded border border-gray-500 focus:border-blue-500 focus:outline-none">
                        <option value="兩">兩</option>
                        <option value="斤">斤</option>
                        <option value="克">克</option>
                        <option value="公斤">公斤</option>
                    </select>
                </div>
                <div id="calcResult" class="text-blue-400 text-lg font-semibold text-center py-2 bg-gray-600 rounded">
                    = ? 元
                </div>
            </div>

            <!-- 快速計算按鈕 -->
            <div class="grid grid-cols-4 gap-1">
                <button onclick="quickCalc(0.5)" class="bg-gray-600 hover:bg-gray-500 text-white text-xs py-1 rounded">0.5</button>
                <button onclick="quickCalc(1)" class="bg-gray-600 hover:bg-gray-500 text-white text-xs py-1 rounded">1</button>
                <button onclick="quickCalc(2)" class="bg-gray-600 hover:bg-gray-500 text-white text-xs py-1 rounded">2</button>
                <button onclick="quickCalc(5)" class="bg-gray-600 hover:bg-gray-500 text-white text-xs py-1 rounded">5</button>
            </div>

            <!-- 計算記錄區 -->
            <div class="bg-gray-700 rounded-lg p-3">
                <div class="flex justify-between items-center mb-2">
                    <h2 class="text-white text-xs font-medium">📝 計算記錄</h2>
                    <button onclick="clearHistory()" class="bg-red-600 hover:bg-red-500 text-white text-xs px-2 py-1 rounded">清除</button>
                </div>
                <div id="history" class="bg-gray-600 rounded p-2 h-20 overflow-y-auto text-xs text-gray-300">
                    <div class="text-center text-gray-400">暫無記錄</div>
                </div>
            </div>

        </div>
    </div>

    <script>
        const conversionRates = {
            '兩': 37.5,
            '斤': 600,
            '克': 1,
            '公斤': 1000
        };

        let pricePerGram = 0;
        let history = [];

        function updateBasePrice() {
            const weight = parseFloat(document.getElementById('baseWeight').value);
            const unit = document.getElementById('baseUnit').value;
            const price = parseFloat(document.getElementById('basePrice').value);
            
            const display = document.getElementById('basePriceDisplay');
            
            if (!weight || !price || weight <= 0 || price <= 0) {
                display.textContent = '請設定基準價格';
                display.className = 'text-gray-400 text-xs text-center py-1 bg-gray-600 rounded';
                pricePerGram = 0;
                return;
            }

            const weightInGrams = weight * conversionRates[unit];
            pricePerGram = price / weightInGrams;
            
            display.textContent = `${weight} ${unit} = ${price} 元 (已設定)`;
            display.className = 'text-green-400 text-xs text-center py-1 bg-gray-600 rounded';
            
            calculatePrice();
        }

        function calculatePrice() {
            const weight = parseFloat(document.getElementById('calcWeight').value);
            const unit = document.getElementById('calcUnit').value;
            const result = document.getElementById('calcResult');
            
            if (!weight || weight <= 0 || pricePerGram === 0) {
                result.textContent = '= ? 元';
                result.className = 'text-gray-400 text-lg font-semibold text-center py-2 bg-gray-600 rounded';
                return;
            }

            const weightInGrams = weight * conversionRates[unit];
            const totalPrice = pricePerGram * weightInGrams;
            
            result.textContent = `= ${totalPrice.toFixed(2)} 元`;
            result.className = 'text-blue-400 text-lg font-semibold text-center py-2 bg-gray-600 rounded';
            
            // 添加到記錄
            addToHistory(`${weight} ${unit} = ${totalPrice.toFixed(2)} 元`);
        }

        function quickCalc(weight) {
            if (pricePerGram === 0) {
                alert('請先設定基準價格！');
                return;
            }
            document.getElementById('calcWeight').value = weight;
            calculatePrice();
        }

        // 記錄功能
        function addToHistory(record) {
            history.unshift(record);
            if (history.length > 10) history.pop(); // 只保留最新10條記錄
            updateHistoryDisplay();
        }

        function updateHistoryDisplay() {
            const historyDiv = document.getElementById('history');
            if (history.length === 0) {
                historyDiv.innerHTML = '<div class="text-center text-gray-400">暫無記錄</div>';
            } else {
                historyDiv.innerHTML = history.map(record => 
                    `<div class="mb-1 pb-1 border-b border-gray-500 last:border-b-0">${record}</div>`
                ).join('');
            }
        }

        function clearHistory() {
            history = [];
            updateHistoryDisplay();
        }



        // 事件監聽
        document.getElementById('baseWeight').addEventListener('input', updateBasePrice);
        document.getElementById('baseUnit').addEventListener('change', updateBasePrice);
        document.getElementById('basePrice').addEventListener('input', updateBasePrice);
        document.getElementById('calcWeight').addEventListener('input', calculatePrice);
        document.getElementById('calcUnit').addEventListener('change', calculatePrice);

        // 初始示例
        window.addEventListener('load', () => {
            document.getElementById('baseWeight').value = '1';
            document.getElementById('baseUnit').value = '斤';
            document.getElementById('basePrice').value = '100';
            updateBasePrice();
        });

        // 重量換算邏輯
        function convertWeight() {
            const input = parseFloat(document.getElementById('convertInput').value);
            const fromUnit = document.getElementById('convertFromUnit').value;
            
            if (!input || input <= 0) {
                clearConverterResults();
                return;
            }
            
            // 先轉換為克
            const weightInGrams = input * conversionRates[fromUnit];
            
            // 再轉換為各單位
            const results = {
                tael: weightInGrams / conversionRates['兩'],
                jin: weightInGrams / conversionRates['斤'],
                gram: weightInGrams / conversionRates['克'],
                kg: weightInGrams / conversionRates['公斤']
            };
            
            // 更新顯示
            document.getElementById('resultTael').textContent = formatWeight(results.tael);
            document.getElementById('resultJin').textContent = formatWeight(results.jin);
            document.getElementById('resultGram').textContent = formatWeight(results.gram);
            document.getElementById('resultKg').textContent = formatWeight(results.kg);
        }
        
        function formatWeight(value) {
            if (value >= 1000) {
                return value.toLocaleString('zh-TW', { maximumFractionDigits: 2 });
            } else if (value >= 1) {
                return value.toFixed(2);
            } else {
                return value.toFixed(4);
            }
        }
        
        function clearConverterResults() {
            document.getElementById('resultTael').textContent = '-';
            document.getElementById('resultJin').textContent = '-';
            document.getElementById('resultGram').textContent = '-';
            document.getElementById('resultKg').textContent = '-';
        }
        
        function quickConvert(weight, unit) {
            document.getElementById('convertInput').value = weight;
            document.getElementById('convertFromUnit').value = unit;
            convertWeight();
        }
        
        function clearConverter() {
            document.getElementById('convertInput').value = '';
            clearConverterResults();
        }
        
        // 重量換算事件監聽
        document.getElementById('convertInput').addEventListener('input', convertWeight);
        document.getElementById('convertFromUnit').addEventListener('change', convertWeight);
    </script>
